<%= render ("layouts/navbar.html.erb") %>

<div class="container">
  <h1><%= @station.name %> Station</h1>
  <p>Associated Lines:</p>
  <ul>
    <% @station.lines.each do |line| %>
      <li><a href = "/lines/<%=line.id%>"><%= line.name %></a></li>
    <% end %>
  </ul>

  <div id="box">

    <%= render("stations/form.html.erb") %>

    <p><%= link_to "Delete", station_path(@station),
                             :data => {:confirm => "You sure?",
                                       :method => "delete"},
                             :class => "btn btn-danger" %></p>
  </div>
</div>


